                    <label type="hidden" for="email"></label>
                    <input class="inp-gd" type="email" id="email" name="email" placeholder="Digite o e-mail de cadastro" value="" autofocus required>
                </div>
                <button class="btn-destaque" type="submit">Redefinir senha</button>
            </form>
        </div>
    </div>

